@model  Nicole.Web.Models.BreadCrumbModel[]
@{
    Layout = null;
}
@if (Model.Any())
{
    <ol class="breadcrumb">
        <li>@Html.ActionLink("首页", "Index", "Home")</li>
        @for (var i = Model.Count()-1; i >= 0; i--)
        {
            if (string.IsNullOrEmpty(Model[i].Url) || Model[i].Active)
            {
                <li class="active">@Model[i].Name</li>
            }
            else
            {
                <li><a href="@Model[i].Url">@Model[i].Name</a></li>
            }
        }
    </ol>
}


