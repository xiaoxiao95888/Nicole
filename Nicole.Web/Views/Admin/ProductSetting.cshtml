@Scripts.Render("~/bundles/ProductSetting")
@*<h2 class="page-header">
        @ViewBag.Title
    </h2>*@
<div class="row">
    <div class="col-md-12">
        <div class="navbar-form navbar-right">
            <a class="btn btn-default" data-bind="click:ProductSetting.viewModel.ShowSearch">搜索</a>
            <a class="btn btn-default" data-bind="click:ProductSetting.viewModel.ShowExport">导出</a>
            <a class="btn  btn-primary" data-bind="click:ProductSetting.viewModel.ShowCreate">新增</a>
        </div>
    </div>
</div>

<table class="table table-responsive table-bordered">
    <thead>
        <tr>
            <th>料号</th>
            <th>型号</th>
            <th>电压</th>
            <th>容量</th>
            <th>脚距</th>
            <th>等级</th>
            <th>特殊设计</th>
            <th>操作</th>
        </tr>
    </thead>
    <tbody data-bind="foreach:viewModel.ProductSettingModels.ProductModels">
        <tr>
            <td data-bind="text:PartNumber"></td>
            <td data-bind="text:ProductType"></td>
            <td data-bind="text:Voltage"></td>
            <td data-bind="text:Capacity"></td>
            <td data-bind="text:Pitch"></td>
            <td data-bind="text:Level"></td>
            <td>
                <a href="#" data-bind="click:ProductSetting.viewModel.ShowSpecificDesign,visible:SpecificDesign()!=null">查看</a>
            </td>
            <td>

                <a href="#" data-bind="click:ProductSetting.viewModel.ShowEdit">编辑</a>
                <a href="#" data-bind="click:ProductSetting.viewModel.Delete">删除</a>

            </td>
        </tr>
    </tbody>
</table>
<div id="page-selection" class="text-center"></div>
<!-- /新增 -->
<div class="modal fade" id="createdialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title">新增</h4>
            </div>
            <div class="modal-body">
                <div class="formbox" style="margin: auto">
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="料号" data-bind="value:ProductSetting.viewModel.ProductModel.PartNumber">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="型号" data-bind="value:ProductSetting.viewModel.ProductModel.ProductType">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="电压" data-bind="value:ProductSetting.viewModel.ProductModel.Voltage">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="容量" data-bind="value:ProductSetting.viewModel.ProductModel.Capacity">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="脚距" data-bind="value:ProductSetting.viewModel.ProductModel.Pitch">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="等级" data-bind="value:ProductSetting.viewModel.ProductModel.Level">
                    </div>
                    <div class="form-group">
                        <textarea placeholder="特殊设计" class="form-control" rows="3" data-bind="value:ProductSetting.viewModel.ProductModel.SpecificDesign"></textarea>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-bind="click:ProductSetting.viewModel.CreateSave">保存</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
            </div>
        </div>
    </div>
</div>

<!-- /编辑 -->
