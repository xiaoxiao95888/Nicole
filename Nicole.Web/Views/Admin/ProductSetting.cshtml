            </div>
        </div>
    </div>
</div>
<!-- /搜索 -->
<div class="modal fade" id="searchdialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title">搜索</h4>
            </div>
            <div class="modal-body">
                <div class="formbox" style="margin: auto">
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="料号关键字" id="PartNumberKey">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="型号关键字" id="ProductTypeKey">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="电压关键字" id="VoltageKey">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="容量关键字" id="CapacityKey">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="脚距关键字" id="PitchKey">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="等级关键字" id="LevelKey">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="特殊设计关键字" id="SpecificDesignKey" 、>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-bind="click:ProductSetting.viewModel.Search">确定</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
            </div>
        </div>
    </div>
</div>