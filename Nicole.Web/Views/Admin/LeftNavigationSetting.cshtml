@Scripts.Render("~/bundles/LeftNavigationSetting")

<div class="row">
    <div class="col-md-12">
        <div class="navbar-form navbar-right">
            <a class="btn  btn-primary" data-bind="click:LeftNavigationSetting.viewModel.ShowCreate">新增</a>
        </div>
    </div>
</div>
<table class="table table-responsive table-bordered">
    <thead>
        <tr>
            <th>职位</th>
            <th>菜单</th>
            <th>操作</th>
        </tr>
    </thead>
    <tbody data-bind="foreach:viewModel.RoleLeftNavigationModels">
        <tr>
            <td data-bind="text:RoleModel.Name"></td>
            <td data-bind="text:LeftNavigationModel.Name"></td>
            <td>
                <a href="#" data-bind="click:LeftNavigationSetting.viewModel.Delete">删除</a>
            </td>
        </tr>
    </tbody>
</table>
<!-- /新增 -->
<div class="modal fade" id="createdialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title">新增</h4>
            </div>
            <div class="modal-body">
                <div class="form-horizontal">
                    <div class="form-group">
                        <label class="col-sm-2 control-label">选择角色</label>
                        <div class="col-sm-10">
                            <select class="form-control" data-bind="options: LeftNavigationSetting.viewModel.RoleModels,optionsText: 'Name', optionsCaption: '选择角色',value:LeftNavigationSetting.viewModel.SelectedRoleModel"></select>

                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">选择菜单</label>
                        <div class="col-sm-10">
                            <select class="form-control" data-bind="options: LeftNavigationSetting.viewModel.LeftNavigationModels,optionsText: 'Name', optionsCaption: '选择菜单',value:LeftNavigationSetting.viewModel.SelectedLeftNavigationModel"></select>

                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" data-bind="click:LeftNavigationSetting.viewModel.CreateSave">保存</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
                </div>
            </div>
        </div>
    </div>
</div>
