@Scripts.Render("~/bundles/StandardCostSetting")
@Styles.Render("~/Content/StandardCostSetting")
@*<h2 class="page-header">
        @ViewBag.Title
    </h2>*@
<div class="row">
    <div class="col-md-12">
        <div class="navbar-form navbar-right">
            <a class="btn btn-default" data-bind="click:StandardCostSetting.viewModel.ShowSearch">搜索</a>
            <a class="btn btn-default" data-bind="click:StandardCostSetting.viewModel.ShowExport">导出</a>
            <a class="btn  btn-primary" data-bind="click:StandardCostSetting.viewModel.ShowCreate">新增</a>
        </div>
    </div>
</div>

<table class="table table-responsive table-bordered">
    <thead>
        <tr>
            <th>报价日期</th>
            <th>成本</th>
            <th>料号</th>
            <th>备注</th>
            <th>操作</th>
        </tr>
    </thead>
    <tbody data-bind="foreach:viewModel.StandardCostSettingModels.StandardCostModels">
        <tr>
            <td data-bind="date:QuotedTime"></td>
            <td data-bind="text:Price"></td>
            <td>
                <a href="#" data-bind="text:ProductModel.PartNumber,click:StandardCostSetting.viewModel.ShowProductModel"></a>
            </td>
            <td>
                <a href="#" data-bind="click:StandardCostSetting.viewModel.ShowRemark,visible:Remark()!=null">查看</a>
            </td>
            <td>
                <a href="#" data-bind="click:StandardCostSetting.viewModel.ShowEdit">编辑</a>
                <a href="#" data-bind="click:StandardCostSetting.viewModel.Delete">删除</a>

            </td>
        </tr>
    </tbody>
</table>
<div id="page-selection" class="text-center"></div>
<!-- /新增 -->
<div class="modal fade" id="createdialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title">新增基础报价</h4>
            </div>
            <div class="modal-body">
                <div class="formbox" style="margin: auto">
                    <div class="form-group">
                        <div class='input-group date'>
                            <input type='text' class="form-control" placeholder="报价日期" data-bind="value:StandardCostSetting.viewModel.StandardCostModel.QuotedTime" />
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-calendar"></span>
                            </span>
                        </div>
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="料号" data-bind="value:StandardCostSetting.viewModel.StandardCostModel.ProductModel.PartNumber">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="成本" data-bind="value:StandardCostSetting.viewModel.StandardCostModel.Price">
                    </div>
                    <div class="form-group">
                        <textarea placeholder="备注" class="form-control" rows="3" data-bind="value:StandardCostSetting.viewModel.StandardCostModel.Remark"></textarea>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-bind="click:StandardCostSetting.viewModel.CreateSave">保存</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
            </div>
        </div>
    </div>
</div>

<!-- /编辑 -->
<div class="modal fade" id="editdialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title">编辑</h4>
            </div>
            <div class="modal-body">
                <div class="formbox" style="margin: auto">
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="报价日期" data-bind="date:StandardCostSetting.viewModel.StandardCostModel.QuotedTime" readonly="readonly">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="料号" data-bind="value:StandardCostSetting.viewModel.StandardCostModel.ProductModel.PartNumber" readonly="readonly">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="成本" data-bind="value:StandardCostSetting.viewModel.StandardCostModel.Price">
                    </div>
                    <div class="form-group">
                        <textarea placeholder="备注" class="form-control" rows="3" data-bind="value:StandardCostSetting.viewModel.StandardCostModel.Remark"></textarea>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-bind="click:StandardCostSetting.viewModel.EditSave">保存</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
            </div>
        </div>
    </div>
</div>
<!-- /搜索 -->
<div class="modal fade" id="searchdialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title">搜索</h4>
            </div>
            <div class="modal-body">
                <div class="formbox" style="margin: auto">
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="料号关键字" id="PartNumberKey">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="型号关键字" id="ProductTypeKey">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="电压关键字" id="VoltageKey">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="容量关键字" id="CapacityKey">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="脚距关键字" id="PitchKey">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="等级关键字" id="LevelKey">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="特殊设计关键字" id="SpecificDesignKey" 、>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-bind="click:StandardCostSetting.viewModel.Search">确定</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
            </div>
        </div>
    </div>
</div>

<!-- /显示料号 -->
<div class="modal fade" id="productdialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title">料号</h4>
            </div>
            <div class="modal-body">
                <div class="formbox" style="margin: auto">
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="料号" data-bind="value:StandardCostSetting.viewModel.ProductModel.PartNumber" readonly="readonly">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="型号" data-bind="value:StandardCostSetting.viewModel.ProductModel.ProductType" readonly="readonly">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="电压" data-bind="value:StandardCostSetting.viewModel.ProductModel.Voltage" readonly="readonly">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="容量" data-bind="value:StandardCostSetting.viewModel.ProductModel.Capacity" readonly="readonly">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="脚距" data-bind="value:StandardCostSetting.viewModel.ProductModel.Pitch" readonly="readonly">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="等级" data-bind="value:StandardCostSetting.viewModel.ProductModel.Level" readonly="readonly">
                    </div>
                    <div class="form-group">
                        <textarea placeholder="特殊设计" class="form-control" rows="3" data-bind="value:StandardCostSetting.viewModel.ProductModel.SpecificDesign" readonly="readonly"></textarea>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
            </div>
        </div>
    </div>
</div>