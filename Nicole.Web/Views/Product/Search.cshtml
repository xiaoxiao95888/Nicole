@Scripts.Render("~/bundles/ProductSearch")
@*<h2 class="page-header">
        @ViewBag.Title
    </h2>*@
<div class="row">
    <div class="col-md-12">
        <div class="navbar-form navbar-right">
            <a class="btn btn-default" data-bind="click:ProductSearch.viewModel.ShowSearch">搜索</a>
            <a class="btn btn-default" data-bind="click:ProductSearch.viewModel.ShowExport">导出</a>
            <a class="btn  btn-primary" data-bind="click:ProductSearch.viewModel.ShowCreate">新增</a>
        </div>
    </div>
</div>

<table class="table table-responsive table-bordered">
    <thead>
        <tr>
            <th>料号</th>
            <th>型号</th>
            <th>电压</th>
            <th>容量</th>
            <th>脚距</th>
            <th>等级</th>
            <th>特殊设计</th>
        </tr>
    </thead>
    <tbody data-bind="foreach:viewModel.ProductSearchModels.ProductModels">
        <tr>
            <td data-bind="text:PartNumber"></td>
            <td data-bind="text:ProductType"></td>
            <td data-bind="text:Voltage"></td>
            <td data-bind="text:Capacity"></td>
            <td data-bind="text:Pitch"></td>
            <td data-bind="text:Level"></td>
            <td data-bind="text:SpecificDesign"></td>
        </tr>
    </tbody>
</table>
<div id="page-selection" class="text-center"></div>

<!-- /搜索 -->
<div class="modal fade" id="searchdialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title">搜索</h4>
            </div>
            <div class="modal-body">
                <div class="form-horizontal">
                    <div class="form-group">
                        <label class="col-sm-3 control-label">料号</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" placeholder="料号" data-bind="value:ProductSearch.viewModel.ProductModel.PartNumber">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">型号</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" placeholder="型号" data-bind="value:ProductSearch.viewModel.ProductModel.ProductType">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">电压</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" placeholder="电压" data-bind="value:ProductSearch.viewModel.ProductModel.Voltage">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">容量</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" placeholder="容量" data-bind="value:ProductSearch.viewModel.ProductModel.Capacity">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">脚距</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" placeholder="脚距" data-bind="value:ProductSearch.viewModel.ProductModel.Pitch">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">等级</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" placeholder="等级" data-bind="value:ProductSearch.viewModel.ProductModel.Level">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">特殊设计</label>
                        <div class="col-sm-9">
                            <textarea placeholder="特殊设计" class="form-control" rows="3" data-bind="value:ProductSearch.viewModel.ProductModel.SpecificDesign"></textarea>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-bind="click:ProductSearch.viewModel.Search">确定</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
            </div>
        </div>
    </div>
</div>